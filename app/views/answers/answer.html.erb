<div class="container pt-5">
  <div class="row mb-3">
    <div class="col-lg-8 offset-lg-2">
    <%= link_to '問題ページに移動', question_path(@question) %>
      <!-- 掲示板内容 -->
      <article class="card">
        <div class="card-body">
          <div class='row'>
            <div class='col-md-12 pb-3'>
              <h4 class='border-bottom'>タイトル</h4>
              <h5 class="d-inline"><%= @question.title %></h5>
            </div>
            <div class='col-md-12 pb-3'>
              <h4 class='border-bottom'>問題文</h4>
              <h5 class="d-inline"><%= simple_format(@question.body) %></h5>
            </div>
            <div class='col-md-12 pb-3'>
              <h4 class='border-bottom'>模範回答</h4>
              <h5 class="d-inline"><%= simple_format(@question.correct_answer) %></h5>
            </div>
          </div>
        </div>
      </article>
    </div>
  </div>
  <div class="row">
  <div class="col-lg-8 offset-lg-2 ">
    <table class="table">
      <%= render partial: "answer", collection: @answers%>
    </table>
  </div>
</div>
</div>