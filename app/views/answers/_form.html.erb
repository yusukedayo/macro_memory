<div class="row mb-3">
  <div class="col-lg-8 offset-lg-2">
    <%= form_with model: answer, url: [question, answer], local: true do |f| %>
    <div class="form-group pb-3">
      <%= f.label :body %>
      <%= f.text_area :body, class: 'form-control', rows: 5, placeholder: '回答を記述してください'%>
     </div>
      <%= f.submit class: 'btn btn-primary' %>
    <% end %>
  </div>
</div>
