<div class="container">
  <tr class="border">
    <td>
      <h5><%= answer.user.name %></h5>
      <h5>スコア：<%= answer.correct_rate %>/100点</h5>
      <h5>次のワードが抜けています<%= answer.forgotten_words %></h5>
      <div class="container mt-3">
        <%= simple_format(answer.body)%>
      </div>
    </td>
  
    <% if current_user.own?(answer) %>
      <td class="action">
        <ul class="list-inline justify-content-center" style="float: right;">
          <li class="list-inline-item">
            <%= link_to edit_question_answer_path(answer.question, answer) do %>
              <p>編集</p>
            <% end %>
          </li>
          <li class="list-inline-item">
            <%= link_to question_answer_path(answer.question, answer), method: :delete, data: { confirm: '本当に削除しますか？' } do %>
              <p>削除</p>
            <% end %>
          </li>
        </ul>
      </td>
    <% end %>
  </tr>
