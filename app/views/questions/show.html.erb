<div class="container pt-5">
  <div class="row mb-3">
    <div class="col-lg-8 offset-lg-2">
    <%= link_to '解答ページに移動', answer_question_answers_path(@question)%>
      <!-- 掲示板内容 -->
      <article class="card">
        <div class="card-body">
          <div class='row'>
            <div class='col-md-9'>
              <h4 class="d-inline"><%= @question.title %></h4>
              <%= render 'crud_menus', question: @question %>
            </div>
          </div>
          <h5><%= simple_format(@question.body) %></h5>
        </div>
      </article>
    </div>
  </div>
  <%= render 'answers/form', { question: @question, answer: @answer } %>
</div>